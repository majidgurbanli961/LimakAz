                <div class="input-group-prepend">
                    <div class="input-group-text"> Status</div>
                </div>

                <select disabled asp-for="@Model.DeliveredStatus" class="form-control">
                    <option value="1">Yoldadir</option>
                    <option value="2">Catdirildi </option>

                </select>
                <span asp-validation-for="DeliveredStatus" class="text-danger"></span>
            </div>
