@model List<ProjectFinal.Models.addressesabroad>

@{
    ViewData["Title"] = "Index";
}


@section TableCss{
    <link href="//cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet">

}
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="row mt-4">
        <!-- First Column -->
        <div class="col-lg-12">
            <!-- Custom Text Color Utilities -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Ünvanlar</h6>
                    <a asp-action="create" class="btn btn-sm btn-success btn-circle">
                        <i class="fas fa-plus"></i>
                    </a>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>

                                <th scope="col"> Şəhər</th>
                                <th scope="col">İlçe</th>
                                <th scope="col">Semt </th>
                                <th scope="col">ZIP/Post kodu </th>
                                <th scope="col">Ülke </th>
                                <th scope="col">Settings </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @item.City
                                </td>

                                <td>
                                    @item.District
                                </td>


                                <td>
                                    @item.DistrictTwo
                                </td>
                                <td>
                                    @item.ZIP
                                </td>
                                <td>
                                    @item.Country.Name

                                </td>


                                <td class="d-flex">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-circle btn-sm">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <p>&nbsp;</p>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-circle btn-sm">
                                        <i class="fa fa-list" aria-hidden="true"></i>

                                    </a>
                                    <p>&nbsp;</p>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-circle btn-sm deleteitem ">
                                        <i class="fas fa-trash"></i>
                                    </a>



                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>





@section CustomTableJs{
    <script src="~/AdminPanel/js/customTable.js"></script>
}