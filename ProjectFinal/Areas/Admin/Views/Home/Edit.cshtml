@model HomeSlider

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




<div class="row ">
    <div class="col-lg-8 col-md-12 mt-5 ">

        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="custom-file">
                <label asp-for="Photo" class="custom-file-label ">Şəkil Yükləyin</label>
                <input asp-for="Photo" class="custom-file-input" id="validatedCustomFile" />
                <span asp-validation-for="Photo" class="invalid-feedback"></span>
            </div>

            <div class="form-group w-100 text-center">
                <input style="width:150px" type="submit" value="Düzəliş Edin" class="text-center btn btn-outline-success mt-3" />
            </div>
        </form>


    </div>
</div>

<a asp-action="IndexHomeSlider" class="btn btn-outline-warning">Geri Dön</a>
